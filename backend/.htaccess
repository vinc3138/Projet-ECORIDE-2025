<IfModule mod_rewrite.c>
    RewriteEngine On

    # Pour rediriger toutes les requêtes vers index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [QSA,L]
</IfModule>

# Désactive l'accès direct aux fichiers .htaccess
<FilesMatch "^\.ht">
    Require all denied
</FilesMatch>