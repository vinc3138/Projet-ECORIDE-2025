import { jwtDecode } from 'jwt-decode';


function isTokenExpired(token) {
  if (!token) return true;
  try {
    const { exp } = jwtDecode(token);
    if (!exp) return true;
    // exp est en secondes, Date.now() en ms
    return Date.now() >= exp * 1000;
  } catch {
    return true; // token invalide
  }
}
